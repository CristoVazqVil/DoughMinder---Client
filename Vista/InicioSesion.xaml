        <Border BorderBrush="#FF527243" BorderThickness="1" CornerRadius="8" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" Width="234" Height="44">
            <TextBox TextWrapping="Wrap" Text="Contraseña" BorderThickness="0" Background="Transparent" Padding="5" Margin="0,0,16,0" FontSize="18"/>
        </Border>


        <Grid x:Name="Entrar" Margin="98,367,119,185">
            <Label Content="Ingresar" HorizontalAlignment="Left" Height="32"  VerticalAlignment="Center" Width="70" Margin="42,0,0,0" FontSize="16" Foreground="White"/>


        </Grid>

    </Grid>
</Window>
